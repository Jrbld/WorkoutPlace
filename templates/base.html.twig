<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1"/>
        <title>{% block title %}Workout Place{% endblock %}</title>
        <link rel="icon" href="{{ asset('build/images/WP-dark-logo.webp') }}">
        <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap" rel="stylesheet">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>

        {# NAVBAR #}
        <nav class="navbar">
            <div id="navbar-logo">
                <a href="{{ url('home') }}">
                    <img src="{{ asset('build/images/WP-light-logo.webp') }}" alt="Logo Workout Place">
                </a>
            </div>

            <div class="menu">
                <a href="{{ url('home') }}">Accueil</a>
                <a href="{{ url('subscribe') }}">Abonnements</a>
                <a href="{{ url('space') }}">Espaces</a>
                <a href="{{ url('lesson') }}">Cours</a>
                <a href="{{ url('news') }}">Actualités</a>
                <a href="{{ url('contact') }}">Contact</a>
                <a href="{{ url('app_login') }}">Connexion</a>
            </div>

            <button class="burger">
                <div class="bar"></div>
            </button>

            <div class="mobile-nav">
                <a href="{{ url('home') }}">ACCUEIL</a>
                <a href="{{ url('subscribe') }}">ABONNEMENTS</a>
                <a href="{{ url('space') }}">ESPACES</a>
                <a href="{{ url('lesson') }}">COURS</a>
                <a href="{{ url('news') }}">ACTUALITÉS</a>
                <a href="{{ url('contact') }}">CONTACT</a>
                <a href="{{ url('app_login') }}">CONNEXION</a>
            </div>
        </nav>

        {% block body %}{% endblock %}

        <footer>
            <div class="footer-icon">
                    <a href="#"><img id="instagram" src="{{ asset('build/images/instagram.png') }}" alt="Instagram" onmouseover="mouseOverInstagram(this)" onmouseout="mouseOutInstagram(this)"></a>
                    <a href="#"><img id="facebook" src="{{ asset('build/images/facebook.png') }}" alt="Facebook" onmouseover="mouseOverFacebook(this)" onmouseout="mouseOutFacebook(this)"></a>
                    <a href="#"><img id="youtube" src="{{ asset('build/images/youtube.png') }}" alt="YouTube" onmouseover="mouseOverYoutube(this)" onmouseout="mouseOutYoutube(this)"></a>
                    <a href="#"><img id="tiktok" src="{{ asset('build/images/tiktok.png') }}" alt="TikTok" onmouseover="mouseOverTiktok(this)" onmouseout="mouseOutTiktok(this)"></a>
                    <a href="https://open.spotify.com/playlist/6XDQ0RFNyeLM8CRIVcXTZy?si=9d59427d04b444dd" target="_blank"><img id="spotify" src="{{ asset('build/images/spotify.png') }}" alt="Spotify" onmouseover="mouseOverSpotify(this)" onmouseout="mouseOutSpotify(this)"></a>
            </div>
            <a id="wp-footer-logo" href="{{ url('home') }}"><img src="{{ asset('build/images/WP-light-complete-logo.webp') }}" alt="Logo Workout Place"></a>
        </footer>

        {# SCRIPT JS #}
        <script>

            /* Changement d'image au survol des icônes de réseaux sociaux */
            function mouseOverInstagram(instagram){
                instagram.setAttribute('src', '../../build/images/instagram-hover.png');
            }
            function mouseOutInstagram(instagram){
                instagram.setAttribute('src', '../../build/images/instagram.png');
            }

            function mouseOverFacebook(facebook){
                facebook.setAttribute('src', '../../build/images/facebook-hover.png');
            }
            function mouseOutFacebook(facebook){
                facebook.setAttribute('src', '../../build/images/facebook.png');
            }

            function mouseOverYoutube(youtube){
                youtube.setAttribute('src', '../../build/images/youtube-hover.png');
            }
            function mouseOutYoutube(youtube){
                youtube.setAttribute('src', '../../build/images/youtube.png');
            }

            function mouseOverTiktok(tiktok){
                tiktok.setAttribute('src', '../../build/images/tiktok-hover.png');
            }
            function mouseOutTiktok(tiktok){
                tiktok.setAttribute('src', '../../build/images/tiktok.png');
                
            }

            function mouseOverSpotify(spotify){
                spotify.setAttribute('src', '../../build/images/spotify-hover.png');
            }
            function mouseOutSpotify(spotify){
                spotify.setAttribute('src', '../../build/images/spotify.png');
                
            }
            /* -------------------------------------------------------- */

            /* TOGGLE MENU */

                var menu_btn = document.querySelector('.burger');
                var mobile_menu = document.querySelector('.mobile-nav');

                menu_btn.addEventListener('click', function() {
                    menu_btn.classList.toggle('is-active');
                    mobile_menu.classList.toggle('is-active');
                });
            
            /* -------------------------------------------------------- */

        </script>

    </body>
</html>
